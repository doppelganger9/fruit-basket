{
  "name": "fruits",
  "version": "1.0.0",
  "description": "Fruit basket price Kata",
  "main": "src/main.js",
  "scripts": {
    "test": "jest",
    "start": "node src/main.js",
    "test:watch": "jest --watch",
    "prettier:write": "prettier *.js src/**/*.js --write",
    "prettier:check": "prettier *.js src/**/*.js --check",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "test:mutate": "stryker run"
  },
  "keywords": [],
  "author": "David LACOURT <david.lacourt@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "coveralls": "3.0.2",
    "husky": "1.3.1",
    "jest": "23.6.0",
    "prettier": "1.16.4",
    "stryker": "0.35.0",
    "stryker-api": "0.24.0",
    "stryker-html-reporter": "0.18.0",
    "stryker-javascript-mutator": "0.14.0",
    "stryker-jest-runner": "1.4.0"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
   "husky": {
    "hooks": {
      "pre-commit": "npm test && npm run prettier:check",
      "pre-push": "npm test && npm run prettier:check && npm run test:mutate"
    }
  }
}
